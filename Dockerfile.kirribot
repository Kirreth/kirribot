# Basis-Image
FROM python:3.11-slim

# Installiere curl f체r den Healthcheck in docker-compose
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Arbeitsverzeichnis
WORKDIR /app

# Abh채ngigkeiten installieren (sowohl Bot- als auch API-Abh채ngigkeiten)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Projektdateien kopieren
COPY . .

# Der Bot-Service wird 체ber 'command' in docker-compose gestartet: ["python", "main.py"]
# EXPOSE ist nicht zwingend notwendig im Dockerfile, aber gut zur Dokumentation
EXPOSE 8001